# Django Settings
DJANGO_SECRET_KEY=your-secret-key-here-change-in-production
DJANGO_DEBUG=True
DJANGO_ALLOWED_HOSTS=localhost,127.0.0.1
DJANGO_SETTINGS_MODULE=config.settings.development

# Database
DATABASE_URL=postgresql://hr_plus_user:password@localhost:5432/hr_plus_db
DB_POOL_SIZE=20

# Redis
REDIS_URL=redis://localhost:6379/0

# Celery
CELERY_BROKER_URL=redis://localhost:6379/0
CELERY_RESULT_BACKEND=redis://localhost:6379/0

# Elasticsearch
ELASTICSEARCH_URL=http://localhost:9200

# AWS / S3 Storage
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_STORAGE_BUCKET_NAME=hr-plus-uploads
AWS_S3_REGION_NAME=us-east-1
AWS_S3_CUSTOM_DOMAIN=
USE_S3=False

# Email Configuration
EMAIL_BACKEND=django.core.mail.backends.console.EmailBackend
# For production, use SMTP backend:
# EMAIL_BACKEND=django.core.mail.backends.smtp.EmailBackend
EMAIL_HOST=smtp.sendgrid.net
EMAIL_PORT=587
EMAIL_HOST_USER=apikey
EMAIL_HOST_PASSWORD=your-sendgrid-api-key
EMAIL_USE_TLS=True
DEFAULT_FROM_EMAIL=noreply@hrplus.com

# Frontend URLs (for email links)
PUBLIC_CAREERS_URL=http://localhost:3000
INTERNAL_DASHBOARD_URL=http://localhost:3001

# Security & Encryption
FIELD_ENCRYPTION_KEY=your-32-character-encryption-key
SALT_KEY=your-salt-key-for-field-encryption

# SSO (for internal users - SAML 2.0 / OIDC)
SAML_IDP_URL=https://sso.yourcompany.com
SAML_ENTITY_ID=hr-plus-local
SAML_CERTIFICATE=

# Monitoring & Error Tracking
SENTRY_DSN=
SENTRY_ENVIRONMENT=development

# CORS (Next.js frontends)
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://localhost:3001

# Rate Limiting
RATELIMIT_ENABLE=True

# Feature Flags
ENABLE_DEBUG_TOOLBAR=True
ENABLE_API_DOCS=True
