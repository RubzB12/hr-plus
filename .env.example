# ============================================================================
# Django Configuration
# ============================================================================

# Secret key for Django (generate with: python -c 'from django.core.management.utils import get_random_secret_key; print(get_random_secret_key())')
# CHANGE IN PRODUCTION
DJANGO_SECRET_KEY=your-secret-key-here-change-in-production

# Debug mode (set to False in production)
# CHANGE IN PRODUCTION
DJANGO_DEBUG=True

# Allowed hosts (comma-separated)
# CHANGE IN PRODUCTION
DJANGO_ALLOWED_HOSTS=localhost,127.0.0.1,0.0.0.0

# Django settings module
DJANGO_SETTINGS_MODULE=config.settings.development

# ============================================================================
# Database Configuration
# ============================================================================

# PostgreSQL connection details
DB_NAME=hrplus
DB_USER=hrplus
DB_PASSWORD=hrplus
DB_HOST=localhost
DB_PORT=5432

# Full database URL (if using DATABASE_URL)
# Format: postgresql://user:password@host:port/dbname
DATABASE_URL=postgresql://hrplus:hrplus@localhost:5432/hrplus

# ============================================================================
# Redis Configuration
# ============================================================================

# Redis connection URL for caching and Celery
REDIS_URL=redis://localhost:6379/0

# ============================================================================
# Celery Configuration
# ============================================================================

# Celery broker URL
CELERY_BROKER_URL=redis://localhost:6379/0

# Celery result backend
CELERY_RESULT_BACKEND=redis://localhost:6379/0

# ============================================================================
# Elasticsearch Configuration
# ============================================================================

# Elasticsearch connection URL
ELASTICSEARCH_URL=http://localhost:9200

# ============================================================================
# AWS / MinIO Configuration (S3-compatible storage)
# ============================================================================

# AWS/MinIO access credentials
AWS_ACCESS_KEY_ID=minioadmin
AWS_SECRET_ACCESS_KEY=minioadmin

# S3/MinIO bucket for file uploads
AWS_STORAGE_BUCKET_NAME=hrplus-uploads

# AWS region
AWS_S3_REGION_NAME=us-east-1

# MinIO endpoint URL (for development)
# Leave empty for production AWS
AWS_S3_ENDPOINT_URL=http://localhost:9000

# ============================================================================
# Email Configuration
# ============================================================================

# Email backend (console for development, SMTP for production)
# CHANGE IN PRODUCTION
EMAIL_BACKEND=console

# SMTP settings (only needed if EMAIL_BACKEND=SMTP)
# CHANGE IN PRODUCTION
EMAIL_HOST=localhost
EMAIL_PORT=1025
EMAIL_HOST_USER=
EMAIL_HOST_PASSWORD=
EMAIL_USE_TLS=False

# Default from email address
DEFAULT_FROM_EMAIL=noreply@hrplus.local

# ============================================================================
# CORS Configuration
# ============================================================================

# Comma-separated list of allowed origins for CORS
# CHANGE IN PRODUCTION
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://localhost:3001,http://127.0.0.1:3000,http://127.0.0.1:3001

# ============================================================================
# Field Encryption Configuration
# ============================================================================

# Encryption key for sensitive fields (generate with: openssl rand -hex 32)
# Used for encrypting PII, SSN, salary data
# CHANGE IN PRODUCTION
FIELD_ENCRYPTION_KEY=00000000000000000000000000000000

# ============================================================================
# Next.js Configuration
# ============================================================================

# Public API URL (accessible from frontend)
NEXT_PUBLIC_API_URL=http://localhost:8000

# WebSocket URL for real-time features
NEXT_PUBLIC_WS_URL=ws://localhost:8000

# Django API URL (server-side only, hidden from client)
# Used by Next.js Server Actions and Server Components
DJANGO_API_URL=http://localhost:8000

# ============================================================================
# SSO / SAML Configuration (Internal Dashboard)
# ============================================================================

# SAML IDP URL (for enterprise SSO)
# CHANGE IN PRODUCTION
SAML_IDP_URL=https://sso.company.com/metadata.xml

# SAML entity ID
# CHANGE IN PRODUCTION
SAML_ENTITY_ID=hrplus-development

# Path to SAML certificate
# CHANGE IN PRODUCTION
SAML_CERTIFICATE_PATH=/path/to/cert.pem

# ============================================================================
# Monitoring / Logging Configuration
# ============================================================================

# Sentry DSN for error tracking (leave empty to disable)
SENTRY_DSN=

# Log level (DEBUG, INFO, WARNING, ERROR, CRITICAL)
LOG_LEVEL=DEBUG

# ============================================================================
# Security Configuration
# ============================================================================

# HTTPS redirect (set to True in production)
# CHANGE IN PRODUCTION
SECURE_SSL_REDIRECT=False

# HSTS settings (only in production)
# CHANGE IN PRODUCTION
SECURE_HSTS_SECONDS=0
SECURE_HSTS_INCLUDE_SUBDOMAINS=False
SECURE_HSTS_PRELOAD=False

# Session cookie security
# CHANGE IN PRODUCTION
SESSION_COOKIE_SECURE=False
SESSION_COOKIE_HTTPONLY=True
SESSION_COOKIE_SAMESITE=Lax

# CSRF cookie security
# CHANGE IN PRODUCTION
CSRF_COOKIE_SECURE=False
CSRF_COOKIE_HTTPONLY=True

# ============================================================================
# Development / Testing Configuration
# ============================================================================

# Enable debug toolbar in development
DEBUG_TOOLBAR_ENABLED=True

# Test database settings (if different from main database)
# TEST_DATABASE_NAME=hrplus_test

# Allow browsable API
REST_FRAMEWORK_BROWSABLE_API=True
